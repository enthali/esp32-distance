{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start QEMU Debug Server",
            "type": "shell",
            "command": "${workspaceFolder}/tools/run_qemu_dual_uart_debug.sh",
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^$",
                    "file": 1,
                    "message": 2
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*Starting QEMU.*",
                    "endsPattern": ".*QEMU is waiting for GDB to connect.*"
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false
            }
        },
        {
            "label": "Stop QEMU",
            "type": "shell",
            "command": "${workspaceFolder}/tools/stop_qemu.sh",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false
            }
        }
    ]
}
